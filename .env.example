# Flask configuration
SECRET_KEY=your_secret_key_here
JWT_SECRET_KEY=your_jwt_secret_key_here

# MongoDB configuration
MONGODB_URI=your_mongodb_uri_here
MONGODB_DATABASE=your_database_name_here

# Stripe configuration
STRIPE_SECRET_KEY=your_stripe_secret_key_here
STRIPE_PUBLISHABLE_KEY=your_stripe_publishable_key_here

# Environment
FLASK_ENV=development
FLASK_APP=app.py
DEBUG=True

# Email Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_specific_password
FROM_EMAIL=your_email@gmail.com

# Gmail OAuth (if using Gmail OAuth instead of SMTP)
GMAIL_OAUTH_CLIENT_ID=your_oauth_client_id_here
GMAIL_OAUTH_CLIENT_SECRET=your_oauth_client_secret_here
GMAIL_OAUTH_REFRESH_TOKEN=your_oauth_refresh_token_here
